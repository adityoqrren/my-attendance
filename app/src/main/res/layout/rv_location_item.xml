<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_location_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="13dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/rv_item_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pt_office"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_office_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PT. Phincon"
            android:textStyle="bold"
            android:textColor="@color/black_text"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toTopOf="@+id/rv_office_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rv_item_photo"
            app:layout_constraintTop_toTopOf="@+id/rv_item_photo"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/rv_office_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Office. 88 @Kasablanca Office Tower 18th Floor"
            android:textColor="@color/grey_text"
            app:layout_constraintBottom_toBottomOf="@+id/rv_item_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rv_office_title"
            app:layout_constraintTop_toBottomOf="@+id/rv_office_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>